
<%= form_with(model: @article, local: true) do |f|%>
    
   
    <div class="form-group">
    <%= f.label :title, class: "col-lg-2 col-sm-12 font-weight-bold ml-2"%>
     <%= f.text_field :title,class: "form-control shadow rounded",  placeholder: "Title of article" %>
    </div>
    
    <div class="form-group row">
    <%= f.label :content, class: "col-lg-2 col-sm-12 font-weight-bold ml-2" %>
    <div class="col-lg-9 col-sm-12"> 
      <%= f.text_area :text, rows: 10, class: "form-control shadow rounded", placeholder: "Compose your article..." %>
    </div>
    </div>
     
    <div class="form-group row">
    <%= f.label "Add an image", class: "col-lg-2 col-sm-12 font-weight-bold ml-2"%>
   <div class="col-lg-9 col-sm-12">
   <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
 </div>
  </div>
    
<div class="form-group row">
  <%= f.label :category,class: "col-lg-2 col-sm-12 font-weight-bold ml-2", id: "current" %>
  <div class="col-lg-9 col-sm-12"> 
    <%= f.collection_select(:category_ids, Category.all, :id, :name,
    { prompt: "Make your selection from the list below (can't be empty)"}, { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
  </div>
  </div>

  <div class="form-group row justify-content-center">
  <%= f.submit "Post your article", class: "btn btn-outline-dark btn-lg font-weight-bold"%>
  </div>
<% end %> 