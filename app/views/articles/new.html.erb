
<%= form_with(model: @article, local: true) do |f|%>
    
   
    <div class="form-group">
    <%= f.label :title, class: "col-lg-2 col-sm-12 font-weight-bold ml-2"%>
     <%= f.text_field :title,class: "form-control shadow rounded",  placeholder: "Title of article" %>
    </div>
    
    <div class="form-group row">
    <%= f.label :content, class: "col-lg-2 col-sm-12 font-weight-bold ml-2" %>
    <div class="col-lg-9 col-sm-12"> 
      <%= f.text_area :text, rows: 10, class: "form-control shadow rounded", placeholder: "Compose your article..." %>
    </div>
    </div>
     
    <div class="form-group row">
    <%= f.label "Add an image", class: "col-lg-2 col-sm-12 font-weight-bold ml-2"%>
   <div class="col-lg-9 col-sm-12">
   <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
 </div>
  </div>

  <div>
    <%= cat_in_articles(form) %>
  </div>

  <div class="form-group row justify-content-center">
  <%= f.submit "Post your article", class: "btn btn-outline-dark btn-lg font-weight-bold"%>
  </div>
<% end %> 
